{
  "name": "@repo/mobile",
  "version": "0.1.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "setup:env": "node ../../scripts/setup-mobile-env.cjs",
    "dev": "pnpm setup:env && dotenv -- sh -c 'expo start --lan --port ${EXPO_METRO_PORT:-8081}'",
    "dev:tunnel": "dotenv -- sh -c 'expo start --tunnel --port ${EXPO_METRO_PORT:-8081}'",
    "start": "dotenv -- sh -c 'expo start --port ${EXPO_METRO_PORT:-8081}'",
    "android": "dotenv -- sh -c 'expo start --android --port ${EXPO_METRO_PORT:-8081}'",
    "ios": "dotenv -- sh -c 'expo start --ios --port ${EXPO_METRO_PORT:-8081}'",
    "web": "dotenv -- sh -c 'expo start --web --port ${EXPO_METRO_PORT:-8081}'",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "echo \"No tests configured yet\""
  },
  "dependencies": {
    "@apollo/client": "^4.0.11",
    "@expo/metro-runtime": "^6.1.2",
    "@repo/application": "workspace:*",
    "@repo/domain": "workspace:*",
    "@repo/graphql": "workspace:*",
    "@repo/infrastructure": "workspace:*",
    "expo": "~54.0.30",
    "expo-status-bar": "~3.0.9",
    "graphql": "^16.12.0",
    "react": "19.2.3",
    "react-dom": "^19.2.3",
    "react-native": "0.81.5",
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@types/react": "~19.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "typescript": "~5.9.2"
  }
}
