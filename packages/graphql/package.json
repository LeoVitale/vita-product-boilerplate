{
  "name": "@repo/graphql",
  "version": "0.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./graphql": {
      "types": "./src/generated/graphql.ts",
      "import": "./src/generated/graphql.ts",
      "require": "./src/generated/graphql.ts"
    }
  },
  "scripts": {
    "generate": "graphql-codegen --config codegen.ts",
    "dev": "graphql-codegen --config codegen.ts --watch"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "graphql": "^16.12.0",
    "graphql-tag": "^2.12.6"
  },
  "peerDependencies": {
    "@apollo/client": "^4.0.0"
  },
  "devDependencies": {
    "@apollo/client": "^4.0.11",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/client-preset": "^5.2.2",
    "@repo/config": "workspace:*",
    "typescript": "^5.9.3"
  }
}
